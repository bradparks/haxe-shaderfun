<?xml version="1.0" encoding="utf-8"?>

<box id="main" style="width: 100%; padding-right:0px; ">
	<script>
		function onClose() {
			items.hidden = !items.hidden;
		}
	</script>
	<button id="close" styleNames="close-button" text="^" onClick="onClose()" />

	<vbox id="items">
		<style source="../css/main.css" />
		
		<label text=" __Lyapunov Fractalgenerator__ " style="background-color:#000000;font-size:18px; color: #ffff88;" />
		
		<hbox style="horizontal-align:right;">
			<label text="(haxeui 2" style="font-size:14px; color: #ffff88;" />
			<image width="16" resource="haxeui-core/styles/default/haxeui.png" />
			<label text="powered)" style="font-size:14px; color: #ffff88;" />
		</hbox>
		
		<hbox>
			<label text="pre iteration:" styleNames="small-label" />
			<hslider id="iteration0" min="0" max="10" value="2" />
			<label   id="iteration0t" styleNames="small-number" />
			</hbox>
		
		<hbox>
			<label text="iteration:" styleNames="small-label" />
			<hslider id="iteration1" min="1" max="99" value="5" />
			<label   id="iteration1t" styleNames="small-number" />
		</hbox>
		
		<hbox>
			<label text="param 1:" styleNames="small-label" />
			<hslider id="param0" min="1" max="5" value="2" />
			<label   id="param0t" styleNames="small-number" />
		</hbox>
		
		<hbox>
			<label text="param 2:" styleNames="small-label" />
			<hslider id="param1" min="0" max="3" value="2" />
			<label   id="param1t" styleNames="small-number" />
		</hbox>

		<hbox>
			<label text="shift:" styleNames="small-label" />
			<hslider id="start" min="0" max="5" value="0" />
			<label   id="startt" styleNames="small-number" />
		</hbox>

		<hbox>
			<label text="balance:" styleNames="small-label" />
			<hslider id="balance" min="0" max="3" value="2" />
			<label   id="balancet" styleNames="small-number" />
		</hbox>
		
		<!--<button id="random" styleNames="big-button" text="Random" onClick="randomize()" />-->
		<button id="random" styleNames="big-button" text="Random" />
		
		<hbox style="horizontal-align:center;">
			<vbox>
				<label text="pos color" styleNames="small-label" />
				<hbox>
					<vslider id="r1" min="0" max="1" value="1" />
					<vslider id="g1" min="0" max="1" value="0" />
					<vslider id="b1" min="0" max="1" value="0" />
				</hbox>			
			</vbox>
			<vbox>
				<label text="mid color" styleNames="small-label" />
				<hbox>
					<vslider id="r2" min="0" max="1" value="0" />
					<vslider id="g2" min="0" max="1" value="0" />
					<vslider id="b2" min="0" max="1" value="0" />
				</hbox>
			</vbox>
			<vbox>
				<label text="neg color" styleNames="small-label" />
				<hbox>
					<vslider id="r3" min="0" max="1" value="0" />
					<vslider id="g3" min="0" max="1" value="0" />
					<vslider id="b3" min="0" max="1" value="1" />
				</hbox>
			</vbox>
		</hbox>
		
		
	</vbox>

	
</box>